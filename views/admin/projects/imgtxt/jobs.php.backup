<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ImgTxt Admin - Jobs Monitoring</title>
</head>
<body>

<div class="admin-content">
    <div class="content-header">
        <h1>OCR Jobs Monitoring</h1>
        <p class="text-muted">Monitor and manage OCR processing jobs</p>
    </div>

    <!-- Filters -->
    <div class="filters-bar">
        <form method="GET" class="filters-form">
            <select name="status" class="filter-select" onchange="this.form.submit()">
                <option value="">All Status</option>
                <option value="completed" <?= ($filters['status'] ?? '') == 'completed' ? 'selected' : '' ?>>Completed</option>
                <option value="failed" <?= ($filters['status'] ?? '') == 'failed' ? 'selected' : '' ?>>Failed</option>
                <option value="pending" <?= ($filters['status'] ?? '') == 'pending' ? 'selected' : '' ?>>Pending</option>
            </select>
        </form>
    </div>

    <!-- Jobs Table -->
    <div class="table-card">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>File Name</th>
                    <th>Language</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Duration</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <?php if (empty($jobs)): ?>
                    <tr>
                        <td colspan="7" class="empty-state">No OCR jobs found</td>
                    </tr>
                <?php else: ?>
                    <?php foreach ($jobs as $job): ?>
                        <tr>
                            <td>#<?= $job['id'] ?></td>
                            <td><?= htmlspecialchars($job['filename']) ?></td>
                            <td><?= strtoupper($job['language']) ?></td>
                            <td>
                                <span class="badge badge-<?= $job['status'] ?>">
                                    <?= ucfirst($job['status']) ?>
                                </span>
                            </td>
                            <td><?= date('M d, Y H:i', strtotime($job['created_at'])) ?></td>
                            <td><?= $job['processing_time'] ? $job['processing_time'] . 's' : '-' ?></td>
                            <td class="actions">
                                <?php if ($job['status'] == 'failed'): ?>
                                    <button onclick="retryJob(<?= $job['id'] ?>)" class="btn-action" title="Retry">
                                        üîÑ
                                    </button>
                                <?php endif; ?>
                                <button onclick="deleteJob(<?= $job['id'] ?>)" class="btn-action btn-danger" title="Delete">
                                    üóëÔ∏è
                                </button>
                            </td>
                        </tr>
                    <?php endforeach; ?>
                <?php endif; ?>
            </tbody>
        </table>

        <!-- Pagination -->
        <?php if ($total_pages > 1): ?>
            <div class="pagination">
                <?php for ($i = 1; $i <= $total_pages; $i++): ?>
                    <a href="?page=<?= $i ?><?= isset($filters['status']) ? '&status=' . $filters['status'] : '' ?>" 
                       class="page-link <?= $current_page == $i ? 'active' : '' ?>">
                        <?= $i ?>
                    </a>
                <?php endfor; ?>
            </div>
        <?php endif; ?>
    </div>
</div>

<script>
function retryJob(jobId) {
    if (confirm('Retry this OCR job?')) {
        fetch(`/admin/projects/imgtxt/jobs/${jobId}/retry`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': '<?= $_SESSION['csrf_token'] ?? '' ?>'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Failed to retry job');
            }
        });
    }
}

function deleteJob(jobId) {
    if (confirm('Delete this OCR job?')) {
        fetch(`/admin/projects/imgtxt/jobs/${jobId}/delete`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': '<?= $_SESSION['csrf_token'] ?? '' ?>'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Failed to delete job');
            }
        });
    }
}
</script>

