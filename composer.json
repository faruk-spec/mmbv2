{
    "name": "mmb/platform",
    "description": "MyMultiBranch - Multi-Project PHP Platform",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "endroid/qr-code": "^4.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "core/",
            "Controllers\\": "controllers/",
            "Projects\\": "projects/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite='Unit Tests'",
        "test:integration": "phpunit --testsuite='Integration Tests'",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "analyze": "phpstan analyse core controllers --level=5",
        "lint": "phpcs --standard=PSR12 core controllers"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
